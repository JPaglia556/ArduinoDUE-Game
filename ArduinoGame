#include <Arduino.h>
#include <SPI.h>
#include <U8g2lib.h>
#include <U8x8lib.h>

U8G2_SSD1309_128X64_NONAME0_1_4W_SW_SPI u8g2(U8G2_R0, 9, 10, 11, 12 ,13);
 int linepos = 128;
 int tob = 0;
 int eol = 0;
 int boxpos = 0;
 int linecheck = 0;
 int difficulty = 16;
 int score = 0;
void setup() {
  pinMode(2, INPUT);
  u8g2.begin();

}

void loop() {
  // read the state of the pushbutton value:
  int z = digitalRead(2);
  if (score%200 == 0 && difficulty != 1) {
    difficulty = difficulty - 1;
  }
  if(linecheck == boxpos) {
    if (linepos < 28 && linepos > 3) {
      u8g2.firstPage();
  do {
    u8g2.setFont(u8g2_font_ncenB14_tr);
    u8g2.drawStr(0,15,"GAME OVER");
    u8g2.setCursor(0, 50);
    u8g2.print(score);
  } while ( u8g2.nextPage() );
     delay(2500);
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                z = digitalRead(2);
     while(z == 0) {
      delay(20);
      z = digitalRead(2);
     }
     linepos = 128;
     tob = 0;
     eol = 0;
     boxpos = 0;
     linecheck = 0;
     difficulty = 16;
     score = 0;
     delay(1000);
    }
  }
  if (eol == 1) {
    tob = random(0,2);
    if (tob == 0) {
      tob = 64;
      linecheck = 1;
    }
    else {
      tob = 0;
      linecheck = 0;
    }
    eol = 0;
  }
  else
  if (linepos < 0) {
    linepos = 128;
    eol = 1;
  }
  else {
    linepos = linepos - 4;
  }

  if (z == 0) {
    // turn LED on:
     u8g2.firstPage();
  do {

    u8g2.drawBox(3,50,25,15);
    u8g2.drawLine(linepos, tob, linepos, 32);
    boxpos = 1;
  } while ( u8g2.nextPage() );
  delay(difficulty);

  }
   else {
      u8g2.firstPage();
  do {

    u8g2.drawBox(3,7,25,15);
    u8g2.drawLine(linepos, tob, linepos, 32);
    boxpos = 0;
  } while ( u8g2.nextPage() );
  delay(difficulty);

  }
  score = score + 1;

}
